{
  "type": "origins:active_self",
  "name": "§6§lPhotonic Transmutation",
  "description": "Transmutes nearby glass into glowstone.",
  "key": {
    "key": "key.origins.primary_active"
  },
  "cooldown": 600,

  "hud_render": {
    "should_render": true,
    "sprite_location": "origins:textures/gui/resource_bar.png",
    "bar_index": 9
  },

  "entity_action": {
    "type": "origins:and",
    "actions": [
      {
        "type": "origins:execute_command",
        "command": "execute positioned ~ ~ ~ run fill ~-5 ~-3 ~-5 ~5 ~3 ~5 minecraft:glowstone replace minecraft:glass"
      },
      {
        "type": "origins:execute_command",
        "command": "playsound minecraft:block.glass.break master @s ~ ~ ~ 1 0.8"
      },
      {
        "type": "origins:execute_command",
        "command": "playsound minecraft:block.glowstone.place master @s ~ ~ ~ 0.7 1.2"
      }
    ]
  }
}
